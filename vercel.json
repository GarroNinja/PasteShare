{
  "version": 2,
  "buildCommand": "cd client && npm install && CI=false npm run build",
  "outputDirectory": "client/build",
  "rewrites": [
    { "source": "/api/pastes/:path*", "destination": "/api/server" },
    { "source": "/api/health", "destination": "/api/server" },
    { "source": "/api/:path*", "destination": "/api/server" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 